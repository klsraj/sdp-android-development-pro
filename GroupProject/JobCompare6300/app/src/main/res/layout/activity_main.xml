<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="1dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/button_job_current"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Add/Edit Current Job" />

        <Button
            android:id="@+id/button_job"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Job Offer" />

        <Button
            android:id="@+id/button_weights"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adjust Ranking Weights" />

        <Button
            android:id="@+id/button_ranking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rank Job Offers" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>